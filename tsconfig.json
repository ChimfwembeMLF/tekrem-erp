{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": "./resources/js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./resources/js/*"]
    },
    "types": ["vite/client"]
  },
  "include": [
    "resources/js/**/*",
    "resources/js/**/*.tsx",
    "resources/js/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "cypress",
    "cypress.config.ts",
    "vite.config.ts"
  ]
}
